@keyframes float {
  0% {
    box-shadow: 0 5px 15px 0px rgba(0,0,0,0.6);
    transform: translatey(0px);
  }
  50% {
    box-shadow: 0 25px 15px 0px rgba(0,0,0,0.2);
    transform: translatex(-2px);
  }
  100% {
    box-shadow: 0 5px 15px 0px rgba(0,0,0,0.6);
    transform: translatey(0px);
  }
}

.headlessWrapper {
  display: flex;
  flex-direction row;
  margin-left: 2rem;
  align-items center;
  justify-content center;
  gap: 0.5rem;
  color: #4D4D4D;
}
.pulse {
  animation: float 2s infinite;
}

.remote-alert {
  width: 2.5rem;
  height: 2.5rem;
  //background: linear-gradient(135deg, #3e85c7 0%, #73a7d9 100%)
  border-radius: 50%;
  display :flex
  align-items center
  justify-content center
  color: #CCCCCC;
  box-shadow: 0px 0px 1px 1px #0000001a;
  &:hover{
    cursor: pointer;
    transform: scale(1.05);
    background: #06B881 !important;
    }
}

.ip {
  color: #06B881;
  &:hover{
    text-decoration: underline;
  }
}

.restartLabel{
    color: #f9a13b;
    &:hover{
      text-decoration: underline;
      cursor pointer;
    }
}

.config-content-wrapper{
    height: 100%;
    margin: auto;

    display: grid;
  grid-template-columns: 1fr 1fr;
    .invalidInput{
    border: 1px solid red !important;
    border-radius: 5px !important;
    }
    .toggleWrapper{
      padding: 1rem;
      .copyAddress{
        float: right;
        font-size: 1rem;
        &:hover{
          cursor: pointer;
          color: #1776d2;
          transform: scale(1.02);
        }
        i{
          transform: scale(1.1);
          margin-right: 0.1rem;
        }
      }
    }
    .connectionWrapper{
     padding: 1rem;
     .inputWrapper{
      margin-top: 1rem;
      .titleIp{
        line-height: 2.8rem;
        margin-right: 2.6rem
      }
      .titlePort{
        line-height: 3.8rem;
        margin-right: 1rem
        margin-top: 1rem;
      }
      .warningText{
      color: red;
      font-size: 1rem;
      margin-left: .5rem;
      line-height: 2.5;
      }
      .hints{
        font-size: .9rem;
        color: gray;
        margin-left: 4rem;
        }
      .ipInput{
        display: flex;
      }
      .portInput{
        margin-top: 1.5rem;
        input{
          height: 2.75rem;
          border: 1px solid #cac9c9;
          padding: 10px;
          width: 15rem;
        }
      }
      }
    }
    .warningWrapper{
     padding: 1rem;
    }
    .changes{
      padding: 1rem;
      text-align: center;
    }
    .footer{
      padding: 2rem;
      border-top: 1px solid #CBCBCA;
      .buttonWrapper{
        width: 20%;
        margin: auto;
        button{
          width: 100%;
        }
      }
    }
  }

  .confirmationWrapper{
    .warning{
      padding: 3rem;
    }
    .footer{
      padding: 1rem;
      border-top: 1px solid #CBCBCA;
      .buttonWrapper{
        display: flex;
        width: 50%;
        margin: auto;
        button{
          width: 50%;
          margin: 1rem;
        }
      }
    }

  }


.grid {
  display: grid;
  grid-template-columns 1fr 1fr;
}


.QRWrapper {
  padding: 1rem;
  box-sizing: border-box;
  display: flex;
  flex-direction column;
  align-items: center;
  gap: 0.25rem;
  justify-items: center;

  h1 {
    padding: none;
    margin: none;
    font-size: 1.2rem;
    font-weight: bold;
  }

  .subheader {
    font-size: 0.9rem;
    color: #4B5563;
  }
}
